<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_user_demands"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.jaya.hackthaonproject.ShowDemand">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:id="@+id/show_user_demands"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="#ffffff">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="#DCDCDC"
            android:weightSum="220"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="5"
                >
            </LinearLayout>

            <TextView

                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/location_id_user_demand"
                android:text="Location Id"
                android:textColor="#FF4081"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="104"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#FF4081"
                android:layout_weight="1"
                >
            </LinearLayout>
            <TextView

                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/resource_type_user_demand"
                android:text="Resource Type"
                android:textColor="#FF4081"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="105"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="5"
                >
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FF4081"
            android:weightSum="220"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="5"
                >
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/no_of_resources_user_demand"
                android:text="No of Resources"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="104"

                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="1"
                >
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/completion_time_user_demand"
                android:text="Completion Time"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_weight="105"
                android:textSize="15dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="5"
                >
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="#DCDCDC"
            android:weightSum="220"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="5"
                >
            </LinearLayout>

            <TextView

                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/priority_user_demand"
                android:text="Priority"
                android:textColor="#FF4081"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="210"
                />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="5"
                >
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FF4081"
            android:weightSum="220"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="5"
                >
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/date_of_demand_user_demand"
                android:text="Date Of Demand"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="104"

                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="1"
                >
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/demand_id_user_demand"
                android:text="Demand Id"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="105"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#ffffff"
                android:layout_weight="5"
                >
            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="#ffffff">
        </LinearLayout>
    </LinearLayout>




    <ListView
        android:layout_below="@+id/show_user_demands"
        android:id="@+id/list_view_show_user_demand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>


</RelativeLayout>



