<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resource_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.jaya.hackthaonproject.ResourceEntry"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.5"
        android:orientation="vertical"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Resource_id"
            android:id="@+id/editText3"
            android:layout_margin="10dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:background="#00897B"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/confirm"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Your Resource Entry Here"
            android:textColor="#000000"
            android:textSize="20dp"
            android:paddingTop="70dp"
            android:gravity="center"
            android:id="@+id/res"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:src="@drawable/checklist"
            android:id="@+id/imageView"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="#00897B"></LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5.4"
        android:orientation="vertical">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:background="#ffffff">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:background="#DCDCDC"
                android:weightSum="220"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="#ffffff"
                    android:layout_weight="5"
                    >
                </LinearLayout>

                <TextView

                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:id="@+id/resource_id_entry"
                    android:text="Resource Id"
                    android:textColor="#FF4081"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:layout_weight="105"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="#00897B"
                    android:layout_weight="1"
                    >
                </LinearLayout>
                <TextView

                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:id="@+id/Resource_type_entry"
                    android:text="Resource Type"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:layout_weight="104"
                    android:background="#FF4081"
                    />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="#ffffff"
                    android:layout_weight="5"
                    >
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:background="#ffffff">
            </LinearLayout>
        </LinearLayout>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5.4"
            android:id="@+id/resource_entry"></ListView>
    </LinearLayout>
</LinearLayout>
