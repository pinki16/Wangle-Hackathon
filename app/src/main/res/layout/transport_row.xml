<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#00897B"
        android:weightSum="220"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/demand_id_transport"
            android:text="Demand ID"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="104"

            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="1"
            >
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/des_id_transport"
            android:text="Destination ID"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="105"
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#DCDCDC"
        android:weightSum="220"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>

        <TextView

            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/res_type_transport"
            android:text="Resource Type"
            android:textColor="#00897B"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="104"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#00897B"
            android:layout_weight="1"
            >
        </LinearLayout>
        <TextView

            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/res_no_transport"
            android:text="No of Resources"
            android:textColor="#00897B"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="105"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>

    </LinearLayout>
</LinearLayout>