
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="#ffffff">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#DCDCDC"
        android:weightSum="220"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>

        <TextView

            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/Resource_Type_fulfill"
            android:text="Resource Type"
            android:textColor="#00897B"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="104"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#00897B"
            android:layout_weight="1"
            >
        </LinearLayout>
        <TextView

            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/No_Of_Resources_fulfill"
            android:text="No Of Resources"
            android:textColor="#00897B"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="105"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#00897B"
        android:weightSum="220"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/Demand_Id_fulfill"
            android:text="Demand Id"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="104"

            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="1"
            >
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/Date_Of_Demand_fulfil"
            android:text="Date Of Demand"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="105"
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="#ffffff">
    </LinearLayout>
</LinearLayout>

