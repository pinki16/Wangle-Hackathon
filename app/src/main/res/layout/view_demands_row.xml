
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="#ffffff">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#DCDCDC"
        android:weightSum="220"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>

        <TextView

            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/location_id"
            android:text="Location Id"
            android:textColor="#00897B"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="104"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#00897B"
            android:layout_weight="1"
            >
        </LinearLayout>
        <TextView

            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/resource_type"
            android:text="Resource Type"
            android:textColor="#00897B"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="105"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#00897B"
        android:weightSum="220"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/no_of_resources"
            android:text="No of Resources"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="104"

            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="1"
            >
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/completion_time"
            android:text="Completion Time"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_weight="105"
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#DCDCDC"
        android:weightSum="220"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>

        <TextView

            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/priority"
            android:text="Priority"
            android:textColor="#00897B"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="104"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#00897B"
            android:layout_weight="1"
            >
        </LinearLayout>
        <TextView

            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/deadline"
            android:text="Deadline"
            android:textColor="#00897B"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="105"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#00897B"
        android:weightSum="220"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/date_of_demand"
            android:text="Date Of Demand"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="104"

            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="1"
            >
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/demand_id"
            android:text="Demand Id"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_weight="105"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="5"
            >
        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="#ffffff">
    </LinearLayout>
    </LinearLayout>

